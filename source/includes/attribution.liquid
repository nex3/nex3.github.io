<p class="attribution">
  <a href="{{ link }}" rel="canonical" class="u-url u-uid"
    >Posted {% render 'date', date: date, class: 'dt-published' %}
    {% if author -%}
      by
      <span class="p-author h-card">
        <span class="p-name">{{ author | escape }}</span>
        {%- if author == 'Natalie' -%}
          {%- assign authorUrl = authorUrl | default: '/' -%}
          {%- assign authorImage = authorImage | default: '/assets/avatar.webp' -%}
        {%- endif -%}
        {%- if authorUrl -%}
          <data class="u-url" value="{{ authorUrl | escape }}"></data>
        {%- endif -%}
        {%- if authorImage -%}
          <data class="u-photo" value="{{ authorImage | escape }}"></data>
        {%- endif -%}
      </span>
    {%- endif -%}
  </a>
</p>
