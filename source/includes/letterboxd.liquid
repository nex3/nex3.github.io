<div class="letterboxd-post-wrapper embed">
  {% if poster %}
    <a
      href="https://letterboxd.com/film/{{ filmSlug }}/"
      target="_blank"
      rel="nofollow noopener"
      class="lb-poster"
      tabindex="0"
    >
      <img src="{{ poster }}" class="embed-image" width="150">
    </a>
  {% endif %}
  <article>
    <header>
      {% if poster %}
        <a
          href="https://letterboxd.com/film/{{ filmSlug }}/"
          target="_blank"
          rel="nofollow noopener"
          class="lb-poster-small"
          tabindex="0"
        >
          <img src="{{ poster }}">
        </a>
      {% endif %}
      <div class="lb-info">
        <address>
          {% if avatar %}
            <a
              class="lb-avatar"
              href="https://letterboxd.com/{{ author }}/"
              target="_blank"
              rel="nofollow noopener"
              tabindex="0"
            >
              <img src="{{ avatar }}" title="{{ authorDisplayName | escape }}" width="24" height="24">
            </a>
          {% endif %}
          <span class="lb-context">Review by</span>
          <a
            class="lb-author"
            href="https://letterboxd.com/{{ author }}/"
            target="_blank"
            rel="nofollow noopener author"
            tabindex="0"
          >
            {{ authorDisplayName | escape }}
            {% if supporter %}
              <span class="lb-badge lb-badge-{{ supporter }}">{{ supporter | capitalize }}</span>
            {% endif %}
          </a>
        </address>
        <h2 class="embed-title">
          {{- film | escape }} ({{ year }})
          {% if rating -%}
            -
            {% render 'star-rating', rating: rating -%}
          {%- endif -%}
        </h2>
        <h2>
          <div>
            <a
              class="lb-title embed-link"
              href="https://letterboxd.com/{{ author }}/film/{{ filmSlug }}/"
              target="_blank"
              rel="nofollow noopener"
              tabindex="0"
            >
              {{- film | escape -}}
            </a>
            <small>
              <a
                href="https://letterboxd.com/films/year/{{ year }}/"
                target="_blank"
                rel="nofollow noopener"
                tabindex="0"
              >
                {{- year -}}
              </a>
            </small>
          </div>
          {% if rating %}
            <span class="lb-rating lb-rating-{{ rating | times: 2 | round }}">
              {%- render 'star-rating', rating: rating -%}
            </span>
          {% endif %}
        </h2>
        <time datetime="{{ date | format: 'yyyy-MM-dd' }}">
          Watched
          <a
            href="https://letterboxd.com/{{ author }}//films/diary/for/{{ date | format: 'yyyy/MM' }}/"
            target="_blank"
            rel="nofollow noopener"
            tabindex="0"
          >
            {{- date | format: 'MMM' -}}
          </a>
          <a
            href="https://letterboxd.com/{{ author }}//films/diary/for/{{ date | format: 'yyyy/MM/dd' }}/"
            target="_blank"
            rel="nofollow noopener"
            tabindex="0"
          >
            {{- date | format: 'd' -}}</a
          >,
          <a
            href="https://letterboxd.com/{{ author }}//films/diary/for/{{ date | format: 'yyyy' }}/"
            target="_blank"
            rel="nofollow noopener"
            tabindex="0"
          >
            {{- date | format: 'yyyy' -}}
          </a>
        </time>
      </div>
    </header>
    {% if image %}
      <div class="lb-image"><img src="{{ image }}"></div>
    {% endif %}
    <div class="lb-prose embed-prose">{{ contents }}</div>
  </article>
</div>
