<div class="generic-post-wrapper h-entry">
  {% if authorAvatar %}
    <a class="gp-avatar-large" href="{{ authorUrl | default: url }}">
      <img
        src="{{ authorAvatar }}"
        {% if authorAvatarAlt or author %}
          alt="{{ authorAvatarAlt | default: author }}"
        {% endif %}
        width="64"
      >
    </a>
  {% endif %}

  {% if quote %}<blockquote cite="{{ url }}">{% else %}<article>{% endif %}
  <header>
    <a href="{{ url }}" class="attribution u-repost-of u-url" rel="canonical">
      Posted
      {% if time %}
        {%- render 'date', date: time, class: 'dt-published' -%}
      {% else %}
        to
        {{ url | urlHostname | escape -}}
      {% endif %}
      {% if author %}
        by
        <span class="p-author h-card">
          {% if authorUrl %}
            <data class="u-url" value="{{ authorUrl }}"></data>
          {% endif %}
          {% if authorAvatar %}
            <data class="u-logo" value="{{ authorAvatar }}"></data>
          {% endif %}
          <span class="p-name">{{ author | escape }}</span>
        </span>
      {% endif %}
    </a>

    {% if authorAvatar %}
      <a class="gp-avatar-small" href="{{ authorUrl | default: url }}">
        <img
          src="{{ authorAvatar }}"
          {% if authorAvatarAlt or author %}
            alt="{{ authorAvatarAlt | default: author }}"
          {% endif %}
        >
      </a>
    {% endif %}
  </header>
  {% if name %}
    <h1 class="p-name">
      <a href="{{url}}">{{ name | escape }}</a>
    </h1>
  {% endif %}
  <div class="gp-prose e-content">
    {{- contents -}}
    {%- if quote -%}
      <p><a href="{{ url }}" class="read-more" title="Read More">â€¦</a></p>
    {%- endif -%}
  </div>
  {%- if tags.size > 0 -%}
    <ul class="gp-tags">
      {%- for tag in tags -%}
        <li class="p-category">#{{ tag }}</li>
      {%- endfor -%}
    </ul>
  {%- endif -%}
  {% if quote %}</blockquote>{% else %}</article>{% endif %}
</div>
