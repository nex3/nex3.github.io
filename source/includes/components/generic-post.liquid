<div class="generic-post-wrapper h-entry">
  {% if authorAvatar %}
    <a class="gp-avatar" href="{{ authorUrl | default: url }}">
      <img
        src="{{ authorAvatar }}"
        {% if authorAvatarAlt or author %}
          alt="{{ authorAvatarAlt | default: author }}"
        {% endif %}
        width="64"
      >
    </a>
  {% endif %}

  {% if quote %}<blockquote cite="{{ url }}">{% else %}<article>{% endif %}
  <header>
    {% render 'external-attribution',
      url: url,
      class: 'u-repost-of',
      date: time,
      author: author,
      authorUrl: authorUrl,
      authorAvatar: authorAvatar
    %}
  </header>

  <div>
    {% if name %}
      <h1 class="p-name">
        <a href="{{url}}">{{ name | escape }}</a>
      </h1>
    {% endif %}
    <div class="gp-prose e-content">
      {{- contents -}}
      {%- if quote -%}
        <p><a href="{{ url }}" class="read-more" title="Read More">â€¦</a></p>
      {%- endif -%}
    </div>
    {%- if tags.size > 0 -%}
      <ul class="gp-tags">
        {%- for tag in tags -%}
          <li class="p-category">#{{ tag }}</li>
        {%- endfor -%}
      </ul>
    {%- endif -%}
  </div>
  {% if quote %}</blockquote>{% else %}</article>{% endif %}
</div>
