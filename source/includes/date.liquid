<time
  datetime="{{ date | dateToRfc3339 }}"
  title="{{ date | format: "iii, MMM d, y, ppp" }}"
  {% if class %}
    class="{{ class }}"
  {% endif %}
>
  {%- if link -%}
    <a
      href="{{ link | escape }}"
      {% if nofollow %}
        rel="nofollow"
      {% endif %}
    >
  {%- endif -%}
  {{- date | format -}}
  {%- if link -%}</a>{%- endif -%}
</time>
